generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  password String
  role Role
  appointments Appointment[]
}

model Appointment {
  id            Int @id @default(autoincrement())
  date          DateTime
  user          User @relation(fields: [userId], references: [id])
  userId        Int
  timeBlock     TimeBlock @relation(fields: [timeblockId], references: [id])
  timeblockId   Int
}

model TimeBlock {
  id            Int @id @default(autoincrement())
  startTime     DateTime
  endTime       DateTime
  appointments  Appointment[]
}

enum Role {
  ADMIN
  USER
}